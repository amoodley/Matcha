<% include ../partials/accountHeader.ejs %>
<div class="registerContainer">
    <div class="row">
        <div class="col-md-6 col-md-offset-6">
            <div class="formContainer">
                <h2 class="text-center heading">Reset password</h2>
                <form method="POST" action="<%= action %>">
                    <div class="form-group">
                        <label for="" class="formLabel">New password</label>
                        <% if (message.NewPassword != '') { %>
                            <p class="pull-right formValidationMessage"><%= message.NewPassword %></p> 
                        <% } %>
                        <input class="form-control" name="newPassword" type="password">
                    </div>
                    <div class="form-group">
                        <label for="" class="formLabel">Confirm password</label>
                        <% if (message.ConfirmPassword != '') { %>
                            <p class="pull-right formValidationMessage"><%= message.ConfirmPassword %></p> 
                        <% } %>
                        <input class="form-control" name="confirmPassword" type="password">
                    </div>
                    <br>
                    <br>
                    <div class="text-center">
                        <button type="submit" class="btn button">Reset password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs %>