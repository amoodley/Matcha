<% include ../partials/header.ejs %>
    <div class="container">
        <div class="well setupProfileContainer">
            <div class="row">
                <h2 class="text-center">Choose a profile photo</h2>
                <h4 class="text-center">Set a profile picture for others to see</h4>
            </div>
            <div class="row">
                <form method="POST" action="/setupImage" enctype="multipart/form-data">
                    <div class="col-md-6">
                        <h3 class="text-center">Add a profile picture</h3>
                        <div class="text-center">
                            <img src="https://i.imgur.com/ftZbKJI.png" class="setupProfileTempImage">
                            <br>
                            <br>
                            <input type="file" name="profileImg" class="btn fileUploadButton">
                            <br>
                            <br>
                            <p class="formValidationMessage"><%= message %></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="setupImageContainer">
                            <img src="https://i.imgur.com/mvnoGSx.jpg" class="setupImage">
                        </div>
                        <button type="submit" class="btn pull-right">Continue...</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    

<% include ../partials/footer.ejs %>